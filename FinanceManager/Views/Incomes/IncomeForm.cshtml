@model FinanceManager.Models.ViewModels.IncomeFormViewModel
<div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
    <div class="container">
        @if (string.IsNullOrEmpty(Model.Id) != true)
        {
            <form action="/Incomes/InactivateIncome?incomeId=@Model.Id">
                <button type="submit" class="btn btn-danger"><i class="fas fa-folder-minus"></i></button> Inactivate
            </form>
        }   
        <form action="/Incomes/SubmitIncome" method="post">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(m => m.Description, new { Class = "form-control", Type = "text", Required = true })
            </div>
            <div class="form-group">
                <label>Value</label>
                @Html.TextBoxFor(m => m.Value, new { Class = "form-control", Required = true })
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script>
    $("#Value").maskMoney();
</script>