@model FinanceManager.Models.ViewModels.MonthsFormViewModel
<div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);">
    <div class="container">
        <form action="/Incomes/SubmitIncome" method="post">
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label>Income</label>
                @Html.TextBoxFor(m => m.TotalIncome, new { Class = "form-control", Type = "text", Required = true })
            </div>
            <div class="form-group">
                <label>Outcome</label>
                @Html.TextBoxFor(m => m.TotalOutcome, new { Class = "form-control", Required = true })
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<script>
    $("#TotalIncome").maskMoney();
    $("#TotalOutcome").maskMoney();
</script>